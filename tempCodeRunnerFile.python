def fare(distance):
    base = 45
    per_km = 10
    total = base + (per_km * distance)
    return total

distance = float(input("Enter distance (km): "))
pickup_time = int(input("Enter pickup time (0-23): "))

cost = fare(distance)

if pickup_time >= 22 or pickup_time <= 5:
    cost *= 1.20
    print("Night surcharge applied.")

print(f"Final cost: â‚±{cost:.2f}")

ratings = []
print("\nEnter 5 passenger ratings (1-5):")
for i in range(5):
    while True:
        rate = int(input(f"Rating {i+1}: "))
        if 1 <= rate <= 5:
            ratings.append(rate)
            break
        else:
            print("Invalid! Rating must be 1-5.")

avg_rating = sum(ratings) / len(ratings)
print(f"\nAverage Driver Rating: {avg_rating:.2f}")


