def common_locations(list1, list2):
    return list(set(list1) & set(list2))


listA = ["Mall", "Airport", "Park", "SM", "Ayala"]
listB = ["Church", "Park", "Ayala", "Terminal"]

print("\nCommon pickup points:", common_locations(listA, listB))
